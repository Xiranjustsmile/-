.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.back-btn {
  padding: 10rpx 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.completion-btn {
  padding: 10rpx 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.completion-btn.completed {
  background-color: #e8f5e9;
  color: #4CAF50;
}

.plans-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.plans-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.plans-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.plans-count {
  font-size: 28rpx;
  color: #999;
}

.plans-list {
  margin-bottom: 30rpx;
}

.plan-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.plan-checkbox {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.plan-checkbox.checked {
  border-color: #4CAF50;
  background-color: #e8f5e9;
}

.plan-content {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.plan-content.completed {
  color: #999;
  text-decoration: line-through;
}

.plan-delete {
  padding: 10rpx;
}

.empty-plans {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.add-plan {
  display: flex;
  margin-top: 20rpx;
}

.plan-input {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.add-btn {
  width: 160rpx;
  font-size: 28rpx;
  padding: 0;
  line-height: 2.4;
  background-color: #4CAF50;
  color: #fff;
}

.completion-flower {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
}

.flower-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.flower-text {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
}