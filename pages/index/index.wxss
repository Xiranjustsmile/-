.container {
  padding: 30rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0 30rpx;
  border-bottom: 1rpx solid #eaeaea;
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.enter-btn {
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  background: #4CAF50;
  color: white;
  border-radius: 30rpx;
}

.excel-container {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.excel-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
  padding-bottom: 20rpx;
  border-bottom: 2rpx dashed #eaeaea;
}

.table-header {
  display: flex;
  border-bottom: 2rpx solid #eaeaea;
  background-color: #f8f8f8;
}

.th {
  flex: 1;
  padding: 20rpx;
  font-weight: bold;
  text-align: center;
  color: #555;
}

.table-body {
  margin-bottom: 30rpx;
}

/* 只展示需要修改的部分 */
/* 修改 tr 相关样式 */
.tr {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
  transition: background-color 0.2s;
  width: 100%;
  overflow: hidden;
}

/* 修改删除按钮样式 */
.delete-btn {
  position: absolute;
  top: 0;
  right: -100rpx; /* 初始位置在屏幕外 */
  width: 100rpx;
  height: 100%;
  background-color: #ff4d4f;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  transition: all 0.3s;
}

