.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.back-btn {
  padding: 10rpx 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 80rpx;
}

.months-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.month-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.month-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.1);
}

.month-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.year-label {
  font-size: 24rpx;
  color: #999;
  background-color: #f5f5f5;
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}